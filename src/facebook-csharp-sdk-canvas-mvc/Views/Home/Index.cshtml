@{
    ViewBag.Title = "Index";
}

<h2>Samples ASP.NET MVC Canvas App using Facebook C# SDK</h2>

@if (ViewBag.perms == null)
{
    <h2>:(</h2>
    <div>
        You will need to login to access the app. <a href="@ViewBag.fbLoginUrl.AbsoluteUri" target="_top">Click here to login</a>.
    </div>
}
else
{
    <h2>Hi @ViewBag.name</h2> 
    <img src="@ViewBag.picture" alt="@ViewBag.name"/>
    
    if(ViewBag.feed == null)
    {
        <h2>:(</h2>
        <div>I can't access your feed. <a href="@ViewBag.fbLoginUrl.AbsoluteUri" target="_top">Click here to grant access to the app</a>.</div>
    }
    else
    {
     
    }
}